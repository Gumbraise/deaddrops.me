<div class="max-w-screen-md mx-auto h-screen-dvh overflow-y-scroll w-full text-white">
    <div class="bg-dd-dark-A border-b-dd-dark-B flex justify-start px-4 py-8">
        <button
                {{ stimulus_action('deaddrop--sidebar', 'showList', null, {return: true}) }}
        >
            <svg xmlns="http://www.w3.org/2000/svg"
                 fill="none"
                 viewBox="0 0 24 24"
                 stroke-width="1.5"
                 stroke="currentColor"
                 class="w-8 h-8 text-white">
                <path stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M11.25 9l-3 3m0 0l3 3m-3-3h7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
        </button>
    </div>
    <div class="bg-dd-dark-D px-4 py-8 space-y-8">
        <div class="space-y-3">
            <p class="text-xl md:text-2xl font-bold">{{ deaddrop.name }}</p>
            <p class="text-xs">
                Last updated: {{ deaddrop.updatedAt|date('d/m/Y') }} | {{ deaddrop.size }}
            </p>
        </div>
        <div class="space-y-2">
            <p class="text-lg font-bold">About</p>
            <p class="text-base">
                {{ deaddrop.about|raw }}
            </p>
        </div>
    </div>
    <div class="px-4 py-8 space-y-3">
        <div class="space-y-2">
            <p class="text-lg font-bold">Activity</p>
            <p class="text-base">
                {{ deaddrop.status }}
            </p>
        </div>
    </div>
</div>